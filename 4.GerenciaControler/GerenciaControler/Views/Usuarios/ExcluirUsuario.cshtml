@model UsuarioModel

@{ 
    if(Model.Admin)
        Layout = "_Layout";
    if (!Model.Admin)
        Layout = "_Layout - Comum";
    ViewData["Title"] = "Confirmação, apagar o contato";
}

<div class=" bg-light" style="padding: 4vh">

    <div class="text-center">

        <h1 class="display-4">@ViewData["Title"]</h1>

        <br />

        <h3>Deseja apagar o usuario @Model.Nome ?</h3>
        <br />
        <a role="button" class="btn btn-danger" asp-controller="Usuarios" asp-action="Excluir" asp-route-id="@Model.Id">Sim</a>
        <a role="button" class="btn btn-success" asp-controller="Usuarios" asp-action="Index">Não</a>
    </div>
</div>
