@model UsuarioModel

@{
    if (Model.Admin)
        Layout = "_Layout";
    if (!Model.Admin)
        Layout = "_Layout - Comum";
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">

    @if (TempData["MensagemErro"] != null)
    {
    <div class="alert alert-danger" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
        @TempData["MensagemErro"]
        <button type="button" class="alert alert-danger btn-sm close-alert">X</button>
    </div>
    }
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
            <button type="button" class="alert alert-success btn-sm close-alert">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
</div>

<div class=" bg-light" style="padding: 4vh">

    <div class="text-center">

        <h1 class="display-4">@ViewData["Title"]</h1>

    </div>

    <form asp-controller="Usuarios" asp-action="Editar" method="post">

        <input type="hidden" asp-for="Id">

        <div class="form-group">
            <label for="Matricula" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Matrícula</label>
            <input readonly="readonly" type="text" asp-for="Matricula" class="form-control" placeholder=@Model.Matricula>
        </div>

        <div class="form-group">
            <label for="Nome" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite Nome Completo">
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label for="Cargo" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Cargo</label>
            <input type="text" asp-for="Cargo" class="form-control" placeholder="Nome do Cargo">
        </div>
        <div class="form-group">
            <label for="Nome" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Idade</label>
            <input readonly="readonly" type="text" asp-for="Idade" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label for="DataNascimento" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Data de Nascimento</label>
            <input type="date" asp-for="DataNascimento" class="form-control" placeholder="Digite Data">
            @Html.ValidationMessageFor(x => x.DataNascimento)
        </div>
        <div class="form-group">
            <label for="Senha" class="form-label d-grid gap-2 d-md-flex justify-content-md-start">Alterar Senha</label>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite senha">
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-center" role="button">
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>

    </form>
</div>